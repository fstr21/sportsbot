# API Keys
SPORTSGAMEODDS_API_KEY=your_sportsgameodds_api_key_here
ESPN_API_KEY=your_espn_api_key_here
CFBD_API_KEY=your_college_football_data_api_key_here

# Database Configuration
DATABASE_URL=mysql://user:password@localhost:3306/sportsdb
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=sportsdb
DATABASE_USER=sportsuser
DATABASE_PASSWORD=your_db_password

# Redis (Optional)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id

# Service URLs (for inter-service communication)
MCP_SPORTSGAMEODDS_URL=http://localhost:8001
MCP_ESPN_URL=http://localhost:8002
MCP_CFBD_URL=http://localhost:8003
AGENT_READER_URL=http://localhost:8004
AGENT_INGEST_URL=http://localhost:8005

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
TIMEZONE=America/New_York

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_BURST_LIMIT=10

# SportsGameOdds Specific (CRITICAL - Monitor Usage!)
SGO_MONTHLY_OBJECT_LIMIT=1000
SGO_CURRENT_USAGE=0
SGO_USAGE_WARNING_THRESHOLD=900

# ESPN Settings
ESPN_BASE_URL=https://site.api.espn.com/apis/site/v2/sports
ESPN_RATE_LIMIT=100

# CollegeFootballData Settings
CFBD_BASE_URL=https://api.collegefootballdata.com
CFBD_RATE_LIMIT=200

# Caching
CACHE_TTL_SECONDS=300
ENABLE_CACHING=true

# Artifact Storage
ARTIFACTS_BASE_PATH=./artifacts
CATALOG_BASE_PATH=./catalog

# Development
DEBUG=false
TESTING=false